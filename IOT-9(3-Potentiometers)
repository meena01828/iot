#define RED_PIN 9
#define GREEN_PIN 10
#define BLUE_PIN 11

#define RED_POT A0
#define GREEN_POT A1
#define BLUE_POT A2

void setup() {
  pinMode(RED_PIN, OUTPUT);
  pinMode(GREEN_PIN, OUTPUT);
  pinMode(BLUE_PIN, OUTPUT);
}

void loop() {
  int redValue = analogRead(RED_POT);
  int greenValue = analogRead(GREEN_POT);
  int blueValue = analogRead(BLUE_POT);

  redValue = map(redValue, 0, 1023, 0, 255);
  greenValue = map(greenValue, 0, 1023, 0, 255);
  blueValue = map(blueValue, 0, 1023, 0, 255);

  analogWrite(RED_PIN, redValue);
  analogWrite(GREEN_PIN, greenValue);
  analogWrite(BLUE_PIN, blueValue);

  delay(10); 
}
